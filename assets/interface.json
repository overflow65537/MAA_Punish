        {
            "name": "安卓端",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource/base"
            ]
        },
        {
            "name": "B 服",
            "path": [
                "{PROJECT_DIR}/resource/base",
                "{PROJECT_DIR}/resource/bilibili"
            ]
        },
        {
            "name": "应用宝服",
            "path": [
                "{PROJECT_DIR}/resource/base",
                "{PROJECT_DIR}/resource/tencent"
            ]
        }
    ],
    "task": [
        {
            "name": "进入游戏",
            "entry": "启动"
        },
        {
            "name": "指挥局",
            "entry": "指挥局",
            "pipeline_override": {
                "编入队伍": {
                    "next": [
                        "作战界面"
                    ],
                    "interrupt": [
                        "关闭未拥有人物提示"
                    ]
                },
                "作战开始": {
                    "post_delay": 0,
                    "recognition": "OCR",
                    "roi": [
                        1032,
                        641,
                        148,
                        53
                    ],
                    "expected": "作战开始",
                    "action": "DoNothing",
                    "next": [
                        "自动战斗任务"
                    ]
                },
                "自动战斗结束": {
                    "recognition": "OCR",
                    "roi": [
                        1024,
                        647,
                        139,
                        35
                    ],
                    "expected": "保存"
                }
            }
        },
        {
            "name": "纷争战区",
            "entry": "纷争战区",
            "pipeline_override": {
                "自动战斗结束": {
                    "post_delay": 1500,
                    "recognition": "OCR",
                    "roi": [
                        1051,
                        641,
                        113,
                        44
                    ],
                    "expected": "退出战斗",
                    "action": "Click",
                    "next": [
                        "纷争战区"
                    ]
                }
            }
        },
        {
            "name": "诺曼复兴战",
            "entry": "诺曼复兴战"
        },
        {
            "name": "幻痛囚笼",
            "entry": "幻痛囚笼",
            "pipeline_override": {
                "战斗中": {
                    "post_delay": 1000
                }
            }
        },
        {
            "name": "刷A级碎片",
            "entry": "刷A级碎片",
            "pipeline_override": {
                "检查主界面": {
                    "action": "Click",
                    "next": [
                        "进入资源副本"
                    ]
                }
            },
            "option": [
                "选择A级角色",
                "是否使用体力"
            ]
        },
        {
            "name": "领取体力",
            "entry": "领取体力"
        },
        {
            "name": "领取邮件",
            "entry": "邮件"
        },
        {
            "name": "购买碎片",
            "entry": "购买碎片"
        },
        {
            "name": "宿舍委托",
            "entry": "宿舍委托"
        },
        {
            "name": "宿舍任务",
            "entry": "宿舍任务"
        },
        {
            "name": "拟战场域",
            "entry": "拟战场域",
            "option": [
                "使用临期体力"
            ]
        },
        {
            "name": "守护者行动",
            "entry": "维系者行动"
        },
        {
            "name": "领取任务",
            "entry": "任务"
        },
        {
            "name": "战令",
            "entry": "通行证"
        },
        {
            "name": "结束游戏",
            "entry": "停止"
        },
        {
            "name": "矩阵循生",
            "entry": "矩阵循生",
            "option": [
                "选择模式"
            ],
            "doc": "使用前提\n[color:Tomato][b]初始招募能量需要在4点以上才可使用普通,困难,噩梦模式[/b][/color]\n[color:Tomato][b]初始招募能量在4点以下请使用兼容模式[/b][/color]\n推荐解锁异度投影事件"
        },
        {
            "name": "寒境曙光",
            "entry": "寒境曙光",
            "option": [
                "选择温度",
                "选择效果"
            ],
            "doc": "推荐使用严霜和启动资金"
        }
    ],
    "option": {
        "选择模式": {
            "cases": [
                {
                    "name": "兼容模式",
                    "pipeline_override": {
                        "选择难度_矩阵循生": {
                            "expected": [
                                "普通"
                            ]
                        },
                        "选择首发_矩阵循生": {
                            "enabled": false
                        },
                        "异度投影_矩阵循生": {
                            "enabled": false
                        },
                        "进入物归新主_矩阵循生": {
                            "enabled": true
                        },
                        "选择首发2_矩阵循生": {
                            "enabled": true
                        },
                        "战斗事件_矩阵循生": {
                            "interrupt": [
                                "重启_寒境曙光",
                                "战斗中",
                                "出击_矩阵循生",
                                "跳过战斗对话_寒境曙光",
                                "进入战斗_矩阵循生",
                                "载入中"
                            ]
                        },
                        "战斗中": {
                            "action": "custom",
                            "custom_action": "CombatActions"
                        }
                    }
                },
                {
                    "name": "普通模式",
                    "pipeline_override": {
                        "选择难度_矩阵循生": {
                            "expected": [
                                "普通"
                            ]
                        }
                    }
                },
                {
                    "name": "困难模式",
                    "pipeline_override": {
                        "选择难度_矩阵循生": {
                            "expected": [
                                "困难"
                            ]
                        }
                    }
                },
                {
                    "name": "噩梦模式",
                    "pipeline_override": {
                        "选择难度_矩阵循生": {
                            "expected": [
                                "噩梦",
                                "墨梦",
                                "恶梦",
                                "王梦"
                            ]
                        }
                    }
                }
            ]
        },
